@model H20.Entities.Guest

@{
    ViewBag.Title = "Login";    
}

<link href="~/Content/LoginStyle.css" rel="stylesheet" />

<div class="sub-main-w3" style="margin-top:30px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <img src="images/logo.png" alt="">
        <h2>Hotel H20 - Login - Guest</h2>        
        <hr />
        <div class="form-style-agile">
            @Html.LabelFor(model => model.Guest_Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Guest_Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Guest_Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-style-agile">
            @Html.LabelFor(model => model.Guest_Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Guest_Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Guest_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-style-agile">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
